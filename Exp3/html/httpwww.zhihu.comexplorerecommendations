<link itemprop="url" href="/question/297749540/answer/506901083">
<meta itemprop="answer-id" content="122233803">
<meta itemprop="answer-url-token" content="506901083">
<a class="zg-anchor-hidden" name="answer-122233803"></a>

<div class="zm-item-vote">
<a class="zm-item-vote-count js-expand js-vote-count" href="javascript:;" data-bind-votecount>30</a>
</div>

