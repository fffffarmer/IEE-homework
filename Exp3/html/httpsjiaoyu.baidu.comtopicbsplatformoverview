    <script type="text/javascript" src="//wkstatic.bdimg.com/static/gaokao/static/miti/common/static/js/third_party/mod_cadcafc.js"></script><script type="text/javascript" src="//wkstatic.bdimg.com/static/gaokao/static/miti/common/pkg/gaokao_libs_pc_a0f11b1.js"></script><script type="text/javascript" src="//wkstatic.bdimg.com/static/gaokao/static/miti/topic/widget/bsplatform/carousel/carousel_56f53ae.js"></script><script type="text/javascript" src="//wkstatic.bdimg.com/static/gaokao/static/miti/topic/widget/bsplatform/form/form_7ff6478.js"></script><script type="text/javascript">!function() {
    $('nav .nav-item:eq(1)').bind('mouseenter', function() {
        $(this).find('.services').show();
    }).bind('mouseleave', function() {
        $(this).find('.services').hide();
    });
}();
!function() {
    require.async('topic:widget/bsplatform/carousel/carousel.js', function (Slider) {
        new Slider({
            ele: '#carousel',
            imgWrap: '.carousel-content',
            tabs: '.carousel-tabs > li',
            arrow: '.arrow > span',
            auto: true,
            speed: 600,
            delay: 4000
        });
        
        // 轮播点击统计
        $('[data-fun=slider-link]').click(function (e) {
            GKLOG.sendLog('600176');
        });
    });
}();
!function() {
    require.async('topic:widget/bsplatform/form/form.js', function (BsForm) {

        // 以后再也不在 tpl 里面写 js 片段了! 真心好难看❎
        var bsform = new BsForm({
            el: '#bsform'
        });

        var optionsMap = {
            item1: {
                val: 'edu_org_wk',
                text: '企业文库'
            },
            item2: {
                val: 'edu_online_reg',
                text: '品牌推广'
            },
            item3: {
                val: 'edu_tech_serv',
                text: '技术服务'
            }
        };
        var resErr = {
            errno1: '提交失败',
            errno2: '缺少必填项',
            errno3: '手机号格式错误',
            errno4: '邮箱格式错误',
            errno5: '数据库保存失败'
        };
        
        $(document).on('self.changeSelect', function (e, data) {
            bsform.setSelect(optionsMap[data].val, optionsMap[data].text);
        });

        $('#dialog .isee').click(function (e) {
            $('#dialog').hide();
        });

        // 触发提交
        $('.sbt-btn').click(function (e) {
            var checkedData = bsform.getData();
            var data = checkedData.data;

            if (checkedData.isError) {

                // 错误展现
                for (var i = 0; i < checkedData.errMsg.length; i++) {
                    var $formItem = bsform.$el.find('[name=' + checkedData.errMsg[i].key + ']');
                    
                    $formItem.parents('.form-group').addClass('error');
                }

                // 绑定检测输入, 反馈用户是否输入正确了
                bsform.bindMonitor();
                return;
            }

             
            data.contact = encodeURIComponent(data.contact);
            data.name = encodeURIComponent(data.name);

            
            $.post('/topic/bsplatform/proxyapi', data, function (res) {
                res = JSON.parse(res);
                if (+res.errno === 0) {
                    $('#dialog .title').html('提交成功');
                    $('#dialog .msg').html('我们的专业顾问将在3个工作日后电话联系您');
                    $('#dialog').show();
                }
                else {
                    $('#dialog .title').html('提交失败');
                    $('#dialog .msg').html(resErr['errno' + +res.errno]);
                    $('#dialog').show();
                }
            });
        });
    });
}();
!function() {
        $(function () {

            // 平台概览页面展现统计
            GKLOG.sendLog('600172');

            // 页面 hook, 触发自定义 select 组件自动选择对应的选项
            $('.cards-show .btn-more').click(function (e) {
                
                // 添加统计
                GKLOG.sendLog('600166');
                
                var $tar = $(e.target);
                
                $(document).trigger('self.changeSelect', $tar.data('item'));
            });

            $('[log-send]').click(function (e) {
                var actId = $(e.target).attr('log-send');

                if (actId) {
                    GKLOG.sendLog(actId);
                }
            });
        });
    }();</script></body>



    
    
    


