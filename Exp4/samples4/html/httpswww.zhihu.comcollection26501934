data-copyable="1"
data-zop
>
<link itemprop="url" href="/question/291423984/answer/495926887">
<meta itemprop="answer-id" content="120237312">
<meta itemprop="answer-url-token" content="495926887">
<a class="zg-anchor-hidden" name="answer-120237312"></a>

<div class="zm-item-vote">
<a class="zm-item-vote-count js-expand js-vote-count" href="javascript:;" data-bind-votecount>703</a>
